movies = {
  Memento: 3
}

puts "What would you like to do?"
choice = gets.chomp

case choice
    when "add"
        puts "What's the name of the movie?"
        title = gets.chomp

        if movies[title.to_sym]
            puts "Movie already in list"
    else
        puts "What's the rating?"
        rating = gets.chomp
        movies [title.to_sym] = rating.to_i
end

    when "update"
        puts "What's the movie title?"
        title = gets.chomp

        if movies[title.to_sym]
            puts "Movie not in list"
    else
        puts "What's the rating?"
        rating = gets.chomp
        movies [title.to_sym] = rating.to_i
end

    when "display"
       movies.each do |movie, rating|
    puts "#{movie}: #{rating}"
end
    when "delete"
        puts "Which movie you want to delete?"
        movie = gets.chomp
    if movies[movie.to_sym]
        movies.delete(title)
else
    puts "Movie not in list"
end

    else
        puts "Error!"
end
